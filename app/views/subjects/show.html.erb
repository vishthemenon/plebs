<p id="notice"><%= notice %></p>

<h1>
  <%= @subject.name %>
</h1>

<h3>
  <%= @subject.code %> | 
  <% @subject.lecturers.each do |lecturer|%>
  <%= link_to lecturer.name, "https://#{lecturer.directory_url}"  %> 
  <% end %>
</h3>

<p>
  <strong>Year <%= @subject.year %></strong>
</p>

<table>
  <% @subject.lectures.order(:pubDate).each do |lecture| %>
    <tr>
      <td>
        <%= 
          link_to( 
            lecture.title ? lecture.title : lecture.rss_title,
            lecture.panopto_url,
            target: :_blank
          )
        %> 
      </td>
    </tr>
  <% end %>
</table>

<ol>
  <% @subject.learning_outcomes.each do |outcome| %>
  <li> <%= outcome.content %> </li>
  <% end %>
</ol>

<p>
  <%= link_to 'New Post', new_post_path %>
</p>

<% @subject.posts.each do |post|%>
  <p>
    <%=link_to post.title, post%>
  </p>
<% end %>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %>
